<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dhruva.fashonation.Fashonation_login_page"
    android:background="#ffffffff">
    <!--tools:showIn="@layout/activity_fashonation_login_page-->
    <!-- android:background="#deb93b42"-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffffff">

        <!-- <AutoCompleteTextView
             android:id="@+id/txt_email_login"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:hint="Email"
             android:inputType="textEmailAddress"
             android:layout_marginTop="80dp"
             android:singleLine="true"
             android:textColor="#ffff0000"
             android:background="#ffffffff"/>-->
        <EditText
            android:id="@+id/Login_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_marginTop="80dp"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:background="#cc191b18"
            android:textColorHint="#ffffffff"
            android:autoText="true" />

        <EditText
            android:id="@+id/Login_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:background="#cc191b18"
            android:textColorHint="#ffffffff" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:id="@+id/Login_remember_me"
            android:paddingTop="5dp"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/app_login_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Sign In"
            android:layout_gravity="center"
            android:textColor="#ffffffff"
            android:background="#ff3c8a97" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="30dp"/>

        <Button android:id="@+id/Login_notregister_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textStyle="italic"
            android:text="Not Registered Yet?" />

    </LinearLayout>

</RelativeLayout>
